<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sc.zzg.modules.sys.dao.SysOrgDao">

	<select id="queryObject" resultType="com.sc.zzg.modules.sys.entity.SysOrgEntity">
		select * from sys_org where id = #{value}
	</select>
	
	<insert id="save" parameterType="com.sc.zzg.modules.sys.entity.SysOrgEntity">
		insert into sys_org
		(
			`id`,
			`parent_id`, 
			`org_code`, 
			`org_name`, 
			`sap_code`,
			`order_num`,
			`org_type`,
			create_time,
			update_time,
			create_user,
			update_user
		)
		values
		(
			#{id},
			#{parentId}, 
			#{orgCode}, 
			#{orgName}, 
			#{sapCode},
			#{orderNum},
			#{orgType},
			#{createTime},
			#{updateTime},
			#{createUser},
			#{updateUser}
		)
	</insert>
	
	<select id="queryListParentId" resultType="com.sc.zzg.modules.sys.entity.SysOrgEntity">
		select * from sys_org where parent_id = #{parentId} order by order_num asc 
	</select>
	
	<select id="queryNotButtonList" resultType="com.sc.zzg.modules.sys.entity.SysOrgEntity">
		select * from sys_org where 1=1 
		<if test=" orgList != null ">
 			and id  in  
		 	<foreach 
		 		item="item" 
		 		index="index" 
		 		collection="orgList"  
		 		open="(" separator="," close=")"> 
		 	   #{item}
		 	 </foreach>
 		</if>
		order by order_num asc 
	</select>
	
	<select id="queryList" resultType="com.sc.zzg.modules.sys.entity.SysOrgEntity">
		select m.*,(select p.org_name from sys_org p where p.id = m.parent_id) as parentName 
			from sys_org m
		<choose>
			<when test="sidx != null and sidx.trim() != ''">
				order by m.${sidx} ${order}
			</when>
			<otherwise>
				order by m.order_num asc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
	<select id="queryTotal" resultType="int">
		select count(*) from sys_org
	</select>
	 
	<update id="update" parameterType="com.sc.zzg.modules.sys.entity.SysOrgEntity">
		update sys_org 
		<set> 
			<if test="parentId != null">`parent_id` = #{parentId}, </if>
			<if test="orgCode != null">`org_code` = #{orgCode}, </if>
			<if test="orgName != null">`org_name` = #{orgName}, </if>
			<if test="sapCode != null">`sap_code` = #{sapCode}, </if>
			<if test="isSubCompany != null">`is_sub_company` = #{isSubCompany}, </if>
			<if test="orderNum != null">`order_num` = #{orderNum},</if>

			<if test="orgType != null">`org_type` = #{orgType},</if>
			<if test="updateTime != null">`update_time` = #{updateTime},</if>
			<if test="updateUser != null">`update_user` = #{updateUser}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="deleteBatch">
		delete from sys_org where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

	<delete id="deleteByOrgCode">
		delete from sys_org where org_code = #{orgCode}
	</delete>
	
	<select id="selectOrg" resultType="com.sc.zzg.modules.sys.entity.SysOrgEntity">
		select o.* from sys_user u, sys_user_org_rel r, sys_org o where u.user_id = r.user_id and r.org_id = o.id and u.user_id = #{userId}
	</select>
	<select id="checkOrgCode" resultType="java.lang.Integer">
		select count(*) from sys_org o where  o.org_code = #{orgCode} 
	</select>
	
</mapper>